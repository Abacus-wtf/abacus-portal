{
  "exclude": ["_types/globalTypes.ts", "node_modules", "public", ".cache"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@state/*": ["state/*"],
      "@hooks/*": ["hooks/*"],
      "@images/*": ["images/*"],
      "@components/*": ["components/*"],
      "@sections/*": ["sections/*"],
      "@config/*": ["config/*"],
      "@templates/*": ["templates/*"],
      "@layouts/*": ["layouts/*"],
      "@models/*": ["models/*"],
      "@test-utils/*": ["test-utils/*"]
    }
  }
}
